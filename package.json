{
  "name": "@ykey/raven-compiler",
  "description": "Transform tool for @ykey/raven",
  "version": "0.0.0",
  "author": {
    "name": "ykeyjp",
    "email": "ykey.jp@gmail.com",
    "url": "https://github.com/ykeyjp"
  },
  "ava": {
    "files": [
      "test/**/*.test.js"
    ],
    "source": [
      "src/**/*.js"
    ],
    "require": [
      "babel-register"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "add-module-exports"
    ],
    "ignore": "test.js",
    "env": {
      "development": {
        "sourceMaps": "inline"
      }
    }
  },
  "bugs": "https://github.com/ykeyjp/raven-compiler/issues",
  "dependencies": {
    "glob": "^7.1.2",
    "node-sass": "^4.5.3"
  },
  "devDependencies": {
    "@types/node": "^8.0.5",
    "ava": "^0.20.0",
    "babel-cli": "^6.24.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.24.1",
    "cross-env": "^5.0.1",
    "npm-run-all": "^4.0.2",
    "nyc": "^11.0.3",
    "prettier": "^1.5.2",
    "xo": "^0.18.2"
  },
  "engines": {
    "node": ">=6"
  },
  "homepage": "https://github.com/ykeyjp/raven-compiler",
  "keywords": [
    "raven",
    "transform"
  ],
  "license": "MIT",
  "main": "./lib/compiler",
  "repository": {
    "type": "git",
    "url": "https://github.com/ykeyjp/raven-compiler.git"
  },
  "scripts": {
    "build": "cross-env BABEL_ENV=production babel src/ -d lib/",
    "cover": "nyc ava",
    "cover:report": "nyc report --reporter=html",
    "format": "prettier --write --single-quote --semi=true --trailing-comma es5 --no-bracket-spacing {src,test}/**/*.js",
    "lint": "xo {src,test}/**/*.js",
    "report": "run-s cover cover:report",
    "test": "ava"
  },
  "xo": {
    "space": true,
    "envs": [
      "node",
      "es6"
    ],
    "rules": {
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true
        }
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "no-new-func": [
        "off"
      ],
      "space-before-function-paren": [
        2,
        "never"
      ],
      "operator-linebreak": [
        "error",
        "after",
        {
          "overrides": {
            "-=": "before",
            "+=": "before",
            "?": "before",
            ":": "before"
          }
        }
      ]
    }
  }
}
